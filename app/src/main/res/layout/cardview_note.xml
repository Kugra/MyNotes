<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="15dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintCardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/custom_cardview_item_background"
        android:padding="6dp">

        <TextView
            android:id="@+id/titleCardViewTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TÍTULO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/custom_cardview_elements"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/descriptionCardViewTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Descrição"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:maxLength="256"
            android:maxEms="256"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_cardview_elements"
            app:layout_constraintTop_toBottomOf="@id/titleCardViewTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>